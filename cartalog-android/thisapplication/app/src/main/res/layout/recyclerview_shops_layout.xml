<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/recyclerView_fragment_list_textView_SN"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:background="@drawable/ic_brightness_1_black_24dp" />

    <TextView
        android:id="@+id/recyclerView_fragment_list_textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/recyclerView_fragment_list_textView_SN"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="20sp" />

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="75dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/divider" />

</RelativeLayout>