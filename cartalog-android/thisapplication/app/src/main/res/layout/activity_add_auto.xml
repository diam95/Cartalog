<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/add_auto_activity_header_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/ic_header">

        <Button
            android:id="@+id/button_add_auto_activity_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/button_back" />

        <TextView
            android:id="@+id/textView_add_auto_activity_new_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/button_add_auto_activity_back"
            android:text="@string/new_order"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_add_auto_activity_new_order"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/button_add_auto_activity_back"
            android:text="@string/for_auto"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_add_auto_activity_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_user" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_auto_activity_cardViews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/add_auto_activity_header_layout">

        <android.support.v7.widget.CardView
            android:id="@+id/add_auto_activity_cardView_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/add_auto_activity_textView_choose_auto"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="15dp"
                    android:text="@string/choose_auto"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="15dp"
                    android:text="@string/change"
                    android:textColor="@color/colorAuto" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_auto_activity_cardView_choose"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:hint="@string/details"
                    android:inputType="text"
                    android:textSize="16sp" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView_gallery_intent"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/editText_details"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/ic_camera" />

                <ImageView
                    android:id="@+id/imageView_ic_delete"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/editText_details"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_delete"
                    android:visibility="invisible" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/button_OK"
            android:layout_margin="15dp"
            android:background="@drawable/button_ok"
            android:layout_below="@id/cardView_details"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/okk"
            android:textColor="@color/white"/>

    </RelativeLayout>

</RelativeLayout>
